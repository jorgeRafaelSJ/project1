<!DOCTYPE html>
<html>
<head>
  <title>Foodish</title>
  <meta charset="utf-8" />
  <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <!-- jQuery -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.11.3/jquery.js"></script>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
  <!-- Bootstrap JS -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
  <!-- API Key -->
  <link rel="stylesheet" type="text/css" href="/static/css/main.css">
  <script src="/static/js/app.js"></script>
</head>
<body>
  <div id="page-wrapper" class="container">
    <header class="page-header">
      <h1>Foodish</h1>
    </header>
    <div class="row">
      <!-- code here -->
      <% for(var i=0; i< foods.recipes.length; i++) { %>
        <div class="col-sm-6 col-md-6">
          <div class="thumbnail">
            <img src="<%=foods.recipes[i].image_url%>">
            <div class="caption">
              <h3><%=foods.recipes[i].title%></h3>
              <!-- <a href="<%= foods.recipes[i].f2f_url %>" target="_blank">Recipe</a> -->
              <textarea class="form-control" rows="3"placeholder="Write your Comments "></textarea>
              <button type="button" id="button1" class="pull-right">Post!</button>
              
              <a href="<%= foods.recipes[i].f2f_url %>" target="_blank">
              <h4>Recipes</h4>
              
              </a>

            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>


