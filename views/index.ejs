<!DOCTYPE html>
<html>
<head>
  <title>Foodish</title>
  <meta charset="utf-8" />
  <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <!-- jQuery -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.11.3/jquery.js"></script>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
  <!-- Bootstrap JS -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
  <!-- // <script src="js/jquery.validate.js"></script> -->
  <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.js"></script>
  <!-- API Key -->
  <link rel="stylesheet" type="text/css" href="/static/css/main.css">
  <script src="/static/js/app.js"></script>
</head>
<body>
  <div id="page-wrapper" class="container">
    <header class="page-header">
      <h1>Foodish</h1>
    </header>
    <div class="row">
      <!-- code here -->
      <% for(var i=0; i< foods.length; i++) { %>
        <div class="col-sm-6 col-md-6">
          <div class="thumbnail">
            <img src="<%=foods[i].image_url%>">
            <div class="caption">
              <h3><%=foods[i].title%></h3>
              <!-- <a href="<%= foods[i].f2f_url %>" target="_blank">Recipe</a> -->
              <div class="form-group">
                <form id="foodPost">
                  <label for="usr">Name:<span>(Required at least 2 characters)</span></label>
                  <input type="text" class="form-control" id="usr" name="name" minlength="2" required>
                  <label for="comments">Comments:<span>(Required at least 10 characters)</span></label>
                  <textarea class="form-control" id="comments" rows="3"placeholder="Write your Comments " required></textarea>
                  <input type="submit" class="pull-right" value="Post!">
                </form>
              </div>
              
              <a href="<%= foods[i].f2f_url %>" target="_blank">
              <h4>Recipes</h4>
              </a>
              <ul id=<%"foods..."%>>
              </ul>
               <% console.log(foods.recipe_id); %>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>


